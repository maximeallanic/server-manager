angular.module('router')
    .service('$toolbar', function ($http) {
        var $toolbar = this;

        $toolbar.name = '<%= config.get("title") %>';

        var menus = [];
        $toolbar.menu = {
            add: function (title, onClick) {
                menus.push({
                    title: title,
                    onClick: onClick
                });
            },
            get: function () {
                return menus;
            }
        };
        return $toolbar;
    });
